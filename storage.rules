rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Règles pour les documents utilisateur
    match /documents/{userId}/{allPaths=**} {
      // Permettre la lecture et l'écriture seulement à l'utilisateur propriétaire
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Permettre la suppression seulement au propriétaire
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les autres fichiers (images de profil, etc.)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles par défaut - refuser tout accès non authentifié
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 